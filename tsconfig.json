    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"]
    },
    "exclude": ["./node_modules/**/*"],
    "include": ["src/**/*", "types/**/*"]
}
